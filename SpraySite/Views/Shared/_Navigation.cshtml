                        </a>
                        <ul class="dropdown-menu">

                            <li>
                                <a href="@Url.Action("LogOff", "Account")">Log Off</a>
                            </li>
                        </ul>
                    </li>
                    
                    <li><span class="brand" data-toggle="dropdown">
                        <img src="@ViewBag.AvatarUrl" alt="User avatar" width="23" height="23" border="0" /></span>
                    </li>
                        
                }
                else
                {
                    <li>
                        <a class="brand" href="@Url.Action("OpenId", "Account")">
                            <img src="@Url.Content("~/Content/Images/sits_small.png")" alt="Sign in through Steam" width="154" height="23" border="0" /></a>
                    </li>
                }
            </ul>
        </div>
    </div>
